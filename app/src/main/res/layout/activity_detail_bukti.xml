<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.DetailBuktiActivity">

    <androidx.appcompat.widget.Toolbar
        app:titleTextColor="@color/colorWhite"
        app:title="Detail Dokumentasi"
        android:background="@color/colorGreen"
        android:id="@+id/tb_detail_dokumentasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   <LinearLayout
       android:padding="20dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
<TextView
    android:text="Form Serah Terima"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
       <ImageView
           android:src="@drawable/bukti"
           android:layout_width="120dp"
           android:layout_height="120dp"/>

       <TextView
           android:layout_marginTop="10dp"
           android:text="Dokumentasi Serah Terima"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView

               android:src="@drawable/dokumentasi1"
               android:layout_marginTop="10dp"
               android:layout_width="120dp"
               android:layout_height="120dp"/>
           <ImageView
               android:src="@drawable/dokumentasi2"
               android:layout_marginTop="10dp"
               android:layout_width="120dp"
               android:layout_height="120dp"/>
       </LinearLayout>

   </LinearLayout>
</LinearLayout>